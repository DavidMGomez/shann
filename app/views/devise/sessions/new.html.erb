<section>
  <div class="container">
    <div class="box">
      <div align="center" class="contact_form" id="contact_form">
          <header>
            <h2>Iniciar Sesion</h2>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email , "Correo electrónico:" , class:"item"%><br />
              <%= f.email_field :email, autofocus: true %>
            </div>

            <div class="field">
              <%= f.label :password, "Contraseña: " %><br />
              <%= f.password_field :password, autocomplete: "off" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %> </br>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Iniciar sesion" , class:"btn btn-primary " %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

          </header>
    </div>
    </div>
  </div>

</section>




